extends ../../layouts/default.pug
include ../../mixins/filter.pug
include ../../mixins/search.pug
include ../../mixins/pagination.pug
include ../../mixins/sort.pug
include ../../mixins/change-multi.pug

block main
    h1(class="mb-4") #{title}


    .card.mb-3
        .card-header 
            .row 
                .col-8
                    |   Danh sách
                    +filter-status(filterStatusArray) 
                    a(
                        class=`btn btn-sm ml-1 btn-outline-success`
                        href=`${path_admin}/songs/trash`
                    ) Đã xóa
                .col-4
                    +search(keyword)
        .card-body
            .row
                .col-8

                .col-4.text-right
                    a(
                        href=`${path_admin}/singers/create`
                        class="btn btn-outline-success"
                    ) + Thêm mới


                table(
                    class="table table-hover table-sm"
                )
                    thead
                        tr
                        th STT
                        th Hình ảnh
                        th Họ Tên
                        //- th Ca sĩ
                        //- th Chủ đề
                        //- th Vị trí
                        th Trạng thái
                        th Hành động

                    tbody
                        each item, index in singers
                            tr 
                                td #{index+1}
                                td
                                    img(
                                        src=item.avatar
                                        alt=item.title
                                        width="80px"
                                        height="auto"
                                    )
                                td #{item.fullName}
                                //- td Dữ liệu ca sĩ
                                //- td Dữ liệu chủ đề
                                //- td Dữ liệu vị trí
                                td
                                    if (item.status === "active")
                                        a(
                                        href="javascript:;"
                                        class="badge badge-success"
                                        ) Hoạt động
                                    else
                                        a(
                                        href="javascript:;"
                                        class="badge badge-danger"
                                        ) Dừng hoạt động
                                td
                                    a(
                                        class="btn btn-secondary btn-sm"
                                        href=`${path_admin}/singers/detail/${item.id}`
                                    ) Chi tiết
                                    a(
                                        class="btn btn-warning btn-sm ml-1"
                                        href=`${path_admin}/singers/edit/${item.id}`
                                    ) Sửa
                                    button(
                                        class="btn btn-danger btn-sm ml-1"
                                        button-delete
                                        data-id=item.id
                                    ) Xóa