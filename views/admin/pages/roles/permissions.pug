extends ../../layouts/default.pug

block main
    if(role.permissions.includes('roles_edit'))
        h1(class="mb-4") Phân quyền

        if(roles)
            div(data-roles=roles)
            div(class="text-right")
                button(
                    type="submit"
                    class="btn btn-primary mb-3"
                    button-submit-permissions
                ) Cập nhật

            table(
                class="table table-hover table-sm"
                table-permissions
            )
                thead
                    tr
                        th Tính năng
                        each item in roles
                            th(class="text-center") #{item.title}
                tbody
                    tr(data-name="id" class="d-none")
                        td Id nhóm quyền
                        each item in roles
                            td(class="text-center")
                                input(type="text" value=item.id)
                    
                    //- Chủ đề bài nhạc
                    tr
                        td(colspan="4")
                            b Chủ đề bài nhạc
                    tr(data-name="topics_view")
                        td Xem
                        each item in roles
                            td(class="text-center")
                                input(type="checkbox")
                    tr(data-name="topics_create")
                        td Thêm mới
                        each item in roles
                            td(class="text-center")
                                input(type="checkbox")
                    tr(data-name="topics_edit")
                        td Chỉnh sửa
                        each item in roles
                            td(class="text-center")
                                input(type="checkbox")
                    tr(data-name="topics_delete")
                        td Xóa
                        each item in roles
                            td(class="text-center")
                                input(type="checkbox")

                    //- Bài nhạc
                    tr
                        td(colspan="4")
                            b Bài nhạc
                    tr(data-name="songs_view")
                        td Xem
                        each item in roles
                            td(class="text-center")
                                input(type="checkbox")
                    tr(data-name="songs_create")
                        td Thêm mới
                        each item in roles
                            td(class="text-center")
                                input(type="checkbox")
                    tr(data-name="songs_edit")
                        td Chỉnh sửa
                        each item in roles
                            td(class="text-center")
                                input(type="checkbox")
                    tr(data-name="songs_delete")
                        td Xóa
                        each item in roles
                            td(class="text-center")
                                input(type="checkbox")

                    //- Ca sĩ
                    tr
                        td(colspan="4")
                            b Bài nhạc
                    tr(data-name="singers_view")
                        td Xem
                        each item in roles
                            td(class="text-center")
                                input(type="checkbox")
                    tr(data-name="singers_create")
                        td Thêm mới
                        each item in roles
                            td(class="text-center")
                                input(type="checkbox")
                    tr(data-name="singers_edit")
                        td Chỉnh sửa
                        each item in roles
                            td(class="text-center")
                                input(type="checkbox")
                    tr(data-name="singers_delete")
                        td Xóa
                        each item in roles
                            td(class="text-center")
                                input(type="checkbox")

                    //- Nhóm quyền
                    tr
                        td(colspan="4")
                            b Nhóm quyền
                    tr(data-name="roles_view")
                        td Xem
                        each item in roles
                            td(class="text-center")
                                input(type="checkbox")
                    tr(data-name="roles_create")
                        td Thêm mới
                        each item in roles
                            td(class="text-center")
                                input(type="checkbox")
                    tr(data-name="roles_edit")
                        td Chỉnh sửa
                        each item in roles
                            td(class="text-center")
                                input(type="checkbox")
                    tr(data-name="roles_delete")
                        td Xóa
                        each item in roles
                            td(class="text-center")
                                input(type="checkbox")
                    tr(data-name="roles_permissions")
                        td Phân quyền
                        each item in roles
                            td(class="text-center")
                                input(type="checkbox")

                    //- Tài khoản
                    tr
                        td(colspan="4")
                            b Tài khoản
                    tr(data-name="accounts_view")
                        td Xem
                        each item in roles
                            td(class="text-center")
                                input(type="checkbox")
                    tr(data-name="accounts_create")
                        td Thêm mới
                        each item in roles
                            td(class="text-center")
                                input(type="checkbox")
                    tr(data-name="accounts_edit")
                        td Chỉnh sửa
                        each item in roles
                            td(class="text-center")
                                input(type="checkbox")
                    tr(data-name="accounts_delete")
                        td Xóa
                        each item in roles
                            td(class="text-center")
                                input(type="checkbox")
            form(
                form-change-permissions
                method="POST"
                action=`${path_admin}/roles/permissions?_method=PATCH`
                class="d-none"
            )
                div(class="form-group")
                    input(
                        type="text"
                        class="form-control"
                        name="permissions"
                    )
        else
            p Chưa có nhóm quyền nào
    else
        h1(class="mb-4") Không tìm thấy trang          
block script
    script(src="/admin/js/role.js")